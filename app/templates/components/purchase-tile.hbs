<h1>{{product.name}}</h1>
{{#if case_chosen}}
  <h3>{{format-price product.case.price}}/{{product.case.name}}</h3>
  {{else}}
  <h3>{{format-price product.unit.price}}/{{product.unit.name}}</h3>
{{/if}}
{{paper-divider}}
{{#paper-switch checked=weightSelect}} {{weight}} {{/paper-switch}}
{{#paper-switch checked=caseSelected}} {{unit}} {{/paper-switch}}
{{paper-divider}}
<p>
Quantity&nbsp;{{#paper-button icon-button=true action="decrementQuantity"}}{{paper-icon "remove"}}{{/paper-button}}
&nbsp;{{quantity}}&nbsp;{{#paper-button icon-button=true action="incrementQuantity"}}{{paper-icon "add"}}{{/paper-button}}
</p>
{{paper-divider}}
<p>
  {{#paper-button class="add-button" raised=true primary=true action="addToCart"}}Add to Cart{{/paper-button}}
</p>
