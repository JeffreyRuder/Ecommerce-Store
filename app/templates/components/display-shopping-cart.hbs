<h2>Shopping Cart</h2>
{{#unless shoppingCart.items}}
  {{#paper-card}}
    {{#paper-card-content}}
      <h3>There are no items in the cart yet.</h3>
    {{/paper-card-content}}
  {{/paper-card}}
{{/unless}}

{{#each shoppingCart.items as |item|}}
{{#paper-card}}
  {{#paper-card-content}}
    {{cart-item-tile item=item}}
    {{/paper-card-content}}
  {{/paper-card}}
{{/each}}

<h3>Total:&nbsp;{{format-price shoppingCart.total}}</h3>

{{#paper-card}}
  {{#paper-card-content}}
    {{#paper-button class="checkout-button" raised=true primary=true}}Checkout{{/paper-button}}
  {{/paper-card-content}}
{{/paper-card}}
