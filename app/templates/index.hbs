{{#paper-card}}
  <div class="letter-background">
    <p class="card-overlay">
      Some buttons and text
    </p>
  </div>

  {{#paper-card-content}}
  {{log model}}
    <p>{{model.bestProduct.name}} content</p>
  {{/paper-card-content}}
{{/paper-card}}

<div layout-gt-md="row">
  {{#each model.allProducts as |product|}}
    {{#paper-card flex="49"}}
      <div class="{{product.name}}">
        <p class="card-overlay">
          Some buttons and text
        </p>
      </div>
      {{#paper-card-content}}
        <p>{{product.name}} content</p>
      {{/paper-card-content}}
    {{/paper-card}}
  {{/each}}
</div>

